{
    "name": "bluex/socket-io",
    "autoload": {
        "psr-4": {
            "Bluex\\SocketIo\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Mohamed Eid",
            "email": "medoeid50@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/contracts": "^8.0",
        "guzzlehttp/guzzle": "^7.0.1"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.3"
    },
    "autoload-dev": {
        "psr-4": {
            "Bluex\\SocketIo\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Bluex\\SocketIo\\Providers\\SocketIoServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-root-package-install" : [
            "php -r \"copy('server.js', 'socket-server.js');\""
        ],
        "post-update-cmd": "Bluex\\SocketIo\\Installer::postUpdate",
        "post-package-install": [
            "Bluex\\SocketIo\\Installer::postPackageInstall"
        ],
        "post-install-cmd": [
            "Bluex\\SocketIo\\Installer::warmCache",
            "phpunit -c app/"
        ],
        "post-autoload-dump": [
            "Bluex\\SocketIo\\Installer::postAutoloadDump"
        ],
        "post-create-project-cmd": [
            "php -r \"copy('config/local-example.php', 'config/local.php');\""
        ]
    }
    
}
